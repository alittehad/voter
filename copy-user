      <input type="text" id="voterSerial" placeholder="Serial No (optional)" class="border p-2 w-full mb-2">
      <select id="relationType" class="border p-2 w-full mb-2">
        <option value="">Relation Type</option>
        <option value="Father">Father</option>
        <option value="Husband">Husband</option>
      </select>
      <input type="text" id="relationName" placeholder="Father/Husband Name" class="border p-2 w-full mb-2">
      <input type="text" id="voterGender" placeholder="Gender" class="border p-2 w-full mb-2">
      <input type="text" id="houseNo" placeholder="House No / Building" class="border p-2 w-full mb-2">
      <input type="text" id="roomNo" placeholder="Room No (Polling Room)" class="border p-2 w-full mb-2">
      <input type="text" id="voterAge" placeholder="Age" class="border p-2 w-full mb-2">
      <input type="text" id="voterAddress" placeholder="Address (Street / Mohalla / Village)" class="border p-2 w-full mb-2">
      <input type="text" id="voterPO" placeholder="Post Office" class="border p-2 w-full mb-2">
      <input type="text" id="voterPS" placeholder="Police Station" class="border p-2 w-full mb-2">
      <input type="text" id="voterState" placeholder="State" class="border p-2 w-full mb-2">
      <input type="text" id="voterDistrict" placeholder="District" class="border p-2 w-full mb-2">
      <input type="text" id="voterAC" placeholder="AC No" class="border p-2 w-full mb-2">
      <input type="text" id="voterPart" placeholder="Part No" class="border p-2 w-full mb-2">
      <input type="text" id="voterBooth" placeholder="Booth No / Location" class="border p-2 w-full mb-2">
      <input type="text" id="pollingAddress" placeholder="Polling Address (e.g. Govt School, Main Rd)" class="border p-2 w-full mb-2">
      <input type="text" id="voterSection" placeholder="Section No (optional)" class="border p-2 w-full mb-2">
